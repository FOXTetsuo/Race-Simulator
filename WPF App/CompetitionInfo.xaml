<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_App"
        xmlns:Controller="clr-namespace:Controller;assembly=Controller" x:Class="WPF_App.CompetitionInfoWindow"
        mc:Ignorable="d"
        Title="Competition Info" Height="450" Width="800" Icon="/Splatoon3_Overview_Splatted_Squid.png">
    <Grid>
        <Label Content="Leaderboard:" HorizontalAlignment="Left" Margin="0,10,0,0" VerticalAlignment="Top" Width="148"/>
        <DataGrid x:Name="DG1" ItemsSource="{Binding Path=InklingData}" AutoGenerateColumns="False" Margin="0,41,425,10" IsReadOnly="True" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Current Position - TODO"  Binding="{Binding }"/>
                <DataGridTextColumn Header="Inkling Name" Binding="{Binding Name}" />
                <DataGridTextColumn Header="Points" Binding="{Binding Points}" />
            </DataGrid.Columns>
            <DataGrid.DataContext>
                <Controller:DataContext_CompetitionInfoWindow/>
            </DataGrid.DataContext>
        </DataGrid>
        <Label Content="Tracks left in competition" HorizontalAlignment="Left" Margin="400,10,0,0" VerticalAlignment="Top" Width="148"/>
    </Grid>
</Window>
